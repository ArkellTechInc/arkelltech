<% include partials/header %>
<div class="siteContainer">
	<div class="topSection">
			<div class="statusContainer"><h2><%=firstname%> <%=lastname%> </h2><h3>is working on a forum.</h3><span class="edit">[edit]</span></div>
		<ul>
			<li>Home</li>
			<li class="notActiveTab">+</li>
		</ul>
	</div>
	<div class="feedSection">
		<div class="newFeedPost">
		<form action="/profile" method="post">
			<h3>What would you list to post?</h3>
			<table><tr>
				<td class="nowrap"><h2><%=firstname%> <%=lastname%>&nbsp</h2></td>
				<td><textarea class="autoExpand" rows='1' data-min-rows='1' wrap="hard" type="text" placeholder="..." name="" autocomplete="off"></textarea></td>
				<td class="nowrap"><button type="submit">post</button></td>
			</tr></table>
			</form>
		</div>
		<table>
		<% posts.forEach(function(post){  %>
			<tr><td><%= post.firstname %> <%= post.lastname %>: </td><td><%= post.message %>[<%= post.date %>]</td><tr>
		<% }) %>
		</table>
	</div>
	<div class="profileSection">
		<div id="profilePic"><img src="images/image.png" alt="test" /></div>
		<ul class="underProfilePic">
				<li>change profile picture</li>
				<li>view members (3)</li>
		</ul>
		<div class="underProfilePicInfoBox">
			<h3>title</h3>
			<h2>president</h2>
			<h3>latest post</h3>
			<h2>none</h2>
			<h3>status</h3>
			<h2>online</h2>
		</div>
	</div>
	
	
	<div class="topMenu">
		<ul>
			<li id="siteTitle"><%=title%></li>
			<li><%=firstname%> <%=lastname%></li>
			<li>forums</li>
			<li>chat</li>
			<li>inbox (<%=inboxCount%>)</li>
			<span class="floatRight">
			<form action="/search" method="post">
				<li><input type="text" placeholder="search" name="search"></li>
				<li><button type="submit">go</button></li>
			</form>
			<a href="/logout">
				<li>logout</li>
			</a>
			</span>
		</ul>
	</div>
</div>
<% include partials/footer %>